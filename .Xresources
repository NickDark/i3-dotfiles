!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.depth:                300
URxvt.geometry:             90x30
URxvt.fading:               0
! URxvt.urgentOnBell:         false
! URxvt.visualBell:           false
URxvt.loginShell:           true
URxvt*saveline:			15000
URxvt.internalBorder:       70
URxvt.lineSpace:            0
urxvt*transparent: true
urxvt*shading: 15
urxvt.blurRadius: 0

! Fonts
URxvt.allow_bold:           false
!URxvt*font: xft:Monospace:pixelsize=14
!URxvt*font: xft:Lekton Nerd Font Mono:pixelsize=14
URxvt*font: xft:hermit:pixelsize=16
!!URxvt*boldFont: xft:Monospace:pixelsize=14
!!URxvt*boldFont: Wuncon Siji:pixelsize=14

! Fix font space
URxvt*letterSpace: -1
rofi.theme: arthur

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          vivaldi-stable
URxvt.keysym.Control-v: eval:paste_clipboard
URxvt.keysym.Control-c: eval:selection_to_clipboard
URxvt.underlineURLs:	true

! Cursor
URxvt.cursorBlink:          false
URxvt.cursorColor:          #1db954
URxvt.cursorUnderline:      true

! Pointer
URxvt.pointerBlank:         true

!!Source http://github.com/altercation/solarized

*background: #bf616a
*foreground: #eff1f5
!!*fading: 40
*fadeColor: #002b36
*cursorColor: #b48ead
*pointerColorBackground: #ebcb8b
*pointerColorForeground: #93a1a1

!! black dark/light
*color0: #111
*color8: #111

!! red dark/light
*color1: #bf616a
*color9: #bf616a

!! green dark/light
*color2: #a3be8c
*color10: #a3be8c

!! yellow dark/light
*color3: #ebcb8b
*color11: #ebcb8b

!! blue dark/light
*color4: #8fa1b3
*color12: #8fa1b3

!! magenta dark/light
*color5: #b48ead
*color13: #b48ead

!! cyan dark/light
*color6: #96b5b4
*color14: #96b5b4

!! white dark/light
*color7: #eff1f5
*color15: #eff1f5
